@using NetC.JuniorDeveloperExam.Web.Models
@model List<NetC.JuniorDeveloperExam.Web.Models.BlogPosts>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@foreach (BlogPosts items in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="mt-4">@items.Title</h1>
                <hr>
                <p>@items.DateTime</p>
                <hr>
                <img class="img-fluid rounded" src="@items.Image" alt="@items.Title"/>
                <hr>
                @Html.Raw(items.HtmlContent)
                <hr>
                <div class="card my-4">
                    <h5 class="card-header">Leave a Comment:</h5>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="Name">Name</label>
                                        <input type="email" class="form-control" id="Name"     placeholder="Name"/>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="EmailAddress">Email Address</label>
                                        <input type="password" class="form-control" id="EmailAddress" placeholder="Email Address"/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Message">Message</label>
                                    <textarea id="Message" class="form-control" rows="3"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
